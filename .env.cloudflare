# Cloudflare Pages Environment Variables Template
# Copy these variables to Cloudflare Pages dashboard -> Settings -> Environment variables

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=service-role-key

# App Configuration
NEXT_PUBLIC_APP_ORIGIN=https://your-domain.pages.dev
SITE_URL=https://your-domain.pages.dev
ADDITIONAL_REDIRECT_URLS=https://your-domain.pages.dev

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=your-project-dsn
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# LINE Login
LINE_CLIENT_SECRET=your-line-channel-secret
NEXT_PUBLIC_LINE_CLIENT_ID=your-line-channel-id

# Email Configuration
SMTP_ENABLED=true
SMTP_HOST=smtp.mailgun.org
SMTP_USER=example@mailgun.org
SMTP_PASS=password
SMTP_ADMIN_EMAIL=noreply@example.com
SMTP_SENDER_NAME=Action Board

# Mailgun
MAILGUN_API_KEY=mailgun-api-key
MAILGUN_DOMAIN=your-domain.com

# Admin Key for Batch Processing
BATCH_ADMIN_KEY=strong-random-string-for-production

# HubSpot Integration
HUBSPOT_API_KEY=pat-hubspot-api-key
HUBSPOT_CONTACT_LIST_ID=1

# Build Configuration
CLOUDFLARE_BUILD=true
ENABLE_CONFIRMATIONS=true

# Sentry Build Configuration
SENTRY_RELEASE=auto-generated-by-github-actions
SENTRY_AUTH_TOKEN=your-sentry-auth-token
UPLOAD_SOURCEMAPS=true
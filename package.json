{
  "name": "action-board",
  "version": "0.1.0",
  "description": "チームみらい Action Board",
  "license": "AGPL-3.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "types": "npx supabase gen types typescript --local > src/lib/types/supabase.ts && biome check --write src/lib/types/supabase.ts",
    "db:migrate": "npx supabase migration up --local && pnpm run types",
    "db:reset": "npx supabase db reset && pnpm run types && pnpm run mission:sync && pnpm run seed:after-sync",
    "seed:after-sync": "./scripts/seed-after-sync.sh",
    "biome:check:write": "biome check --write .",
    "test": "pnpm run test:unit && pnpm run test:supabase && pnpm run test:e2e",
    "test:ci:unit": "jest --ci --reporters=default --reporters=jest-junit --testPathIgnorePatterns=tests/supabase/",
    "test:ci:supabase": "jest --ci --reporters=default --reporters=jest-junit --testMatch='**/tests/supabase/**/*.test.ts' --testEnvironment=node --coverage=false",
    "test:ci:playwright": "CI=true playwright test",
    "test:ci:e2e": "bash -c 'pnpm run test:ci:supabase & P1=$!; pnpm run test:ci:playwright & P2=$!; wait $P1; R1=$?; wait $P2; R2=$?; [ $R1 -eq 0 ] && [ $R2 -eq 0 ]'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:unit": "jest --testPathIgnorePatterns=tests/supabase/",
    "test:supabase": "jest --testMatch='**/tests/supabase/**/*.test.ts' --testEnvironment=node --coverage=false",
    "typecheck": "tsc --noEmit",
    "mission:sync": "tsx mission_data/src/sync.ts",
    "mission:sync:dry": "tsx mission_data/src/sync.ts --dry-run",
    "mission:export": "tsx mission_data/src/export.ts",
    "poster:load-csv": "tsx poster_data/load-csv.ts",
    "poster:auto-load": "tsx poster_data/auto-load-from-drive.ts && pnpm run poster:mask-names",
    "poster:auto-load:log": "./poster_data/auto-load-with-log.sh && pnpm run poster:mask-names",
    "poster:clear": "./poster_data/clear.sh",
    "poster:mask-names": "tsx poster_data/mask-names.ts",
    "calculate-badges": "tsx scripts/calculate-badges.ts",
    "export-users-prefecture": "tsx scripts/export-users-prefecture.ts",
    "sync-party-memberships": "tsx src/scripts/sync-party-memberships.ts",
    "posting:sync": "tsx posting_data/src/sync.ts",
    "posting:sync:dry": "tsx posting_data/src/sync.ts --dry-run",
    "season:sync": "tsx season_data/src/sync.ts",
    "season:sync:dry": "tsx season_data/src/sync.ts --dry-run",
    "posting:backfill-area": "tsx scripts/backfill-posting-shapes-area.ts",
    "posting:backfill-area:dry": "tsx scripts/backfill-posting-shapes-area.ts --dry-run",
    "youtube:sync-videos": "tsx scripts/sync-youtube-videos.ts",
    "youtube:sync-videos:dry": "tsx scripts/sync-youtube-videos.ts --dry-run",
    "youtube:sync-videos:backfill": "tsx scripts/sync-youtube-videos.ts --backfill",
    "youtube:sync-likes": "tsx scripts/sync-youtube-likes.ts",
    "youtube:sync-likes:dry": "tsx scripts/sync-youtube-likes.ts --dry-run",
    "youtube:sync-comments": "tsx scripts/sync-youtube-comments.ts",
    "youtube:sync-comments:dry": "tsx scripts/sync-youtube-comments.ts --dry-run",
    "tiktok:sync": "dotenv -e .env -- pnpm --filter @action-board/tiktok-data sync",
    "tiktok:sync:dry": "dotenv -e .env -- pnpm --filter @action-board/tiktok-data sync --dry-run"
  },
  "dependencies": {
    "@geoman-io/leaflet-geoman-free": "^2.18.3",
    "@radix-ui/react-accordion": "^1.2.10",

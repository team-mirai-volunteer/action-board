    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-visually-hidden": "^1.1.0",
    "@sentry/nextjs": "^9.22.0",
    "@supabase/ssr": "0.6.1",
    "@supabase/supabase-js": "2.49.8",
    "@tsparticles/engine": "^3.8.1",

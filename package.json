    "@radix-ui/react-tabs": "^1.1.12",
    "@sentry/nextjs": "^9.22.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.49.8",
    "@tsparticles/engine": "^3.8.1",

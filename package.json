    "js-yaml": "^4.1.0",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "lucide-react": "^0.511.0",
    "mailgun.js": "^12.0.3",
    "nanoid": "^5.1.5",
    "next": "^15.3.8",
    "next-themes": "^0.4.6",
    "nextjs-toploader": "^3.9.17",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-qr-code": "^2.0.15",
    "react-tsparticles": "^2.12.2",
    "sonner": "^2.0.4",
    "tsparticles-engine": "^2.12.0",
    "tsparticles-preset-fireworks": "^2.12.0",
    "zod": "^3.25.23"

{
  "name": "action-board",
  "version": "0.1.0",
  "description": "チームみらい Action Board",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "types": "npx supabase gen types typescript --local > src/lib/types/supabase.ts && biome check --write src/lib/types/supabase.ts",
    "db:migrate": "npx supabase migration up --local && npm run types",
    "biome:check:write": "biome check --write .",
    "test": "npm run test:unit && npm run test:supabase && npm run test:e2e",
    "test:ci:unit": "jest --ci --reporters=default --reporters=jest-junit --testPathIgnorePatterns=tests/supabase/",
    "test:ci:e2e": "jest --ci --reporters=default --reporters=jest-junit --testMatch='**/tests/supabase/**/*.test.ts' --testEnvironment=node --coverage=false && CI=true playwright test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:unit": "jest --testPathIgnorePatterns=tests/supabase/",
    "test:supabase": "jest --testMatch='**/tests/supabase/**/*.test.ts' --testEnvironment=node --coverage=false",
    "typecheck": "tsc --noEmit",
    "mission:sync": "tsx mission_data/src/sync.ts",
    "mission:sync:dry": "tsx mission_data/src/sync.ts --dry-run",
    "mission:export": "tsx mission_data/src/export.ts",
    "poster:load-csv": "tsx poster_data/load-csv.ts",
    "poster:auto-load": "tsx poster_data/auto-load-from-drive.ts && npm run poster:mask-names",
    "poster:auto-load:log": "./poster_data/auto-load-with-log.sh && npm run poster:mask-names",
    "poster:clear": "./poster_data/clear.sh",
    "poster:mask-names": "tsx poster_data/mask-names.ts",
    "calculate-badges": "tsx scripts/calculate-badges.ts",
    "export-users-prefecture": "tsx scripts/export-users-prefecture.ts",
    "sync-party-memberships": "tsx src/scripts/sync-party-memberships.ts",
    "posting:sync": "tsx posting_data/src/sync.ts",
    "posting:sync:dry": "tsx posting_data/src/sync.ts --dry-run",
    "posting:backfill-area": "tsx scripts/backfill-posting-shapes-area.ts",
    "posting:backfill-area:dry": "tsx scripts/backfill-posting-shapes-area.ts --dry-run"
  },
